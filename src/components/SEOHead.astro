---
import { ViewTransitions } from "astro:transitions";
import { mobileHero } from "../utils/cloudflare";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  heroImage?: string;
  twitterCard?: string;
}

const {
  title,
  description,
  ogImage,
  heroImage,
  twitterCard = "summary_large_image",
} = Astro.props;

const resolvedOgImage =
  ogImage || new URL("/og-image.jpg", Astro.site).toString();
const siteTitle = `${title} | Timothy Blake Photography`;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="description" content={description} />
<title>{siteTitle}</title>
<link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />
<link rel="icon" type="image/png" href="/favicon.png" />
<link rel="icon" href="/favicon.ico" sizes="32x32" />
<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
<link rel="manifest" href="/manifest.json" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title="RSS Feed"
  href="/rss.xml"
/>
<meta name="generator" content={Astro.generator} />

<!-- Open Graph -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={siteTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={resolvedOgImage} />

<!-- Twitter -->
<meta property="twitter:card" content={twitterCard} />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={siteTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={resolvedOgImage} />

<!-- Eliminate connection setup time for all external image origins -->
<link rel="preconnect" href="https://media.timothyblake.com" crossorigin />
<link rel="dns-prefetch" href="https://media.timothyblake.com" />
<link rel="preconnect" href="https://live.staticflickr.com" crossorigin />
<link rel="dns-prefetch" href="https://live.staticflickr.com" />
<link rel="dns-prefetch" href="https://www.openstreetmap.org" />

<!-- Google Search Console -->
<meta
  name="google-site-verification"
  content="g_ZILzgK3g3scLXP3c5CwGPx0KGD7cKbgm-W0rXWziQ"
/>

<!-- Schema.org: WebSite -->
<script is:inline type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Timothy Blake Photography",
    "url": "https://photography.timothyblake.com/"
  }
</script>

<!-- Schema.org: Person -->
<script is:inline type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "Timothy Blake",
    "url": "https://photography.timothyblake.com",
    "jobTitle": "Travel Photographer",
    "sameAs": ["https://twitter.com/timothyblake"]
  }
</script>

<!-- Hero image preload for LCP -->
{
  heroImage && (
    <link
      rel="preload"
      as="image"
      href={heroImage}
      imagesrcset={`${mobileHero(heroImage)} 800w, ${heroImage} 3000w`}
      imagesizes="(max-width: 768px) 100vw, 100vw"
      fetchpriority="high"
    />
  )
}

<ViewTransitions />
