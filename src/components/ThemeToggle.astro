<button
    id="theme-toggle"
    class="btn btn-link text-white p-2 d-flex align-items-center justify-content-center"
    aria-label="Toggle light/dark mode"
    title="Toggle theme"
>
    <!-- Sun Icon (shown in dark mode, hidden in light mode) -->
    <svg
        id="theme-icon-sun"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        fill="currentColor"
        viewBox="0 0 16 16"
        class="theme-icon"
    >
        <path
            d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6zm0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0zm0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13zm8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5zM3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8zm10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0zm-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707zM4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z"
        ></path>
    </svg>

    <!-- Moon Icon (shown in light mode, hidden in dark mode) -->
    <svg
        id="theme-icon-moon"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        fill="currentColor"
        viewBox="0 0 16 16"
        class="theme-icon d-none"
    >
        <path
            d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278zM4.858 1.311A7.269 7.269 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.316 7.316 0 0 0 5.205-2.162c-.337.042-.68.063-1.029.063-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286z"
        ></path>
    </svg>
</button>

<style>
    #theme-toggle {
        transition:
            transform 0.2s ease,
            opacity 0.2s ease;
    }
    #theme-toggle:hover {
        transform: scale(1.1);
        opacity: 0.8;
    }
</style>

<script is:inline>
    function setupThemeToggle() {
        const toggleBtn = document.getElementById("theme-toggle");
        const sunIcon = document.getElementById("theme-icon-sun");
        const moonIcon = document.getElementById("theme-icon-moon");

        if (!toggleBtn || !sunIcon || !moonIcon) return;

        // Read current theme state from html element
        const currentTheme =
            document.documentElement.getAttribute("data-bs-theme");

        // Update icons based on current theme
        if (currentTheme === "light") {
            sunIcon.classList.add("d-none");
            moonIcon.classList.remove("d-none");
        } else {
            sunIcon.classList.remove("d-none");
            moonIcon.classList.add("d-none");
        }

        // Toggle click handler
        toggleBtn.addEventListener("click", () => {
            const isDark =
                document.documentElement.getAttribute("data-bs-theme") ===
                "dark";
            const newTheme = isDark ? "light" : "dark";

            // Set DOM
            document.documentElement.setAttribute("data-bs-theme", newTheme);

            // Save preference
            localStorage.setItem("theme", newTheme);

            // Swap icons
            if (newTheme === "light") {
                sunIcon.classList.add("d-none");
                moonIcon.classList.remove("d-none");
            } else {
                sunIcon.classList.remove("d-none");
                moonIcon.classList.add("d-none");
            }
        });
    }

    // Setup on initial load and after view transitions
    setupThemeToggle();
    document.addEventListener("astro:page-load", setupThemeToggle);
</script>
