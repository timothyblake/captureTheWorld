---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import SEOHead from "../components/SEOHead.astro";
import "../styles/bootstrap-custom.scss";
import "@fontsource/playfair-display/700.css";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  heroImage?: string;
}

const {
  title,
  description = "A travel photography gallery capturing places around the world.",
  ogImage,
  heroImage,
} = Astro.props;
---

<!doctype html>
<html lang="en" data-bs-theme="dark">
  <head>
    <SEOHead
      title={title}
      description={description}
      ogImage={ogImage}
      heroImage={heroImage}
    />

    <!-- Per-page head extras (e.g. lightbox CSS) -->
    <slot name="head" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  /* ── Override Bootstrap dark-mode tokens ── */
  [data-bs-theme="dark"] {
    --bs-body-bg: #0d0d0d;
    --bs-body-color: #e8e8e8;
    --bs-secondary-color: #888;
    --bs-border-color: #2a2a2a;
    --bs-card-bg: #1a1a1a;
    --bs-card-border-color: #2a2a2a;
    --bs-link-color: #ffcb5d;
    --bs-link-hover-color: #ffd880;

    /* Project-wide tokens */
    --accent: #ffcb5d;
    --ff-display: "Playfair Display", Georgia, serif;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
  }

  a {
    text-decoration: none;
  }

  /* ── Spacing scale extension ── */
  @media (min-width: 992px) {
    .py-lg-6 {
      padding-top: 5rem !important;
      padding-bottom: 5rem !important;
    }
    .pt-lg-6 {
      padding-top: 5rem !important;
    }
    .pb-lg-6 {
      padding-bottom: 5rem !important;
    }
  }

  /* ── Custom utility classes used throughout ── */
  .ff-display {
    font-family: var(--ff-display);
  }
  .text-accent {
    color: var(--accent) !important;
  }
  .border-accent {
    border-color: var(--accent) !important;
  }

  .btn-accent {
    background-color: var(--accent);
    border-color: var(--accent);
    color: #0d0d0d;
    font-weight: 600;
  }
  .btn-accent:hover,
  .btn-accent:focus {
    opacity: 0.85;
    color: #0d0d0d;
  }

  .btn-outline-accent {
    color: var(--accent);
    border-color: var(--accent);
  }
  .btn-outline-accent:hover,
  .btn-outline-accent:focus {
    background-color: var(--accent);
    color: #0d0d0d;
  }

  /* ── GLightbox Overrides ── */
  .gslide-title {
    text-align: center !important;
    margin-bottom: 0 !important;
  }
</style>
